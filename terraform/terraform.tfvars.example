# Copy this file to terraform.tfvars and customize as needed
# terraform.tfvars will be ignored by git for security

# AWS Configuration
aws_region = "us-east-1"

# Domain Configuration
domain_name    = "weather.mattlittle.me"
subdomain      = "weather"
hosted_zone_id = ""  # Your existing mattlittle.me hosted zone

# S3 Configuration
bucket_name       = "weather-mattlittle-me"
enable_versioning = true

# CloudFront Configuration
distribution_name      = "little-weather-prod"
cloudfront_price_class = "PriceClass_100"  # US, Canada, Europe (cheapest)
enable_ipv6           = false

# SSL Certificate
certificate_name = "weather-mattlittle-me-cert"

# Tags
tags = {
  Project     = "little-weather"
  Environment = "production"
  ManagedBy   = "terraform"
  Domain      = "weather.mattlittle.me"
}
